<% wrap_layout :layout do %>

  <% author = data.team.find {|person| person[:firstname] == current_article.data.author } %>

  <article>
    <header class="post-header">
      <div class="row">
        <div class="col">
          <h1><%= current_article.title %></h1>
          <div class="post-meta">
            <time datetime="<%= current_article.date.strftime('%F') %>"><%= I18n.l(current_article.date, format: "%e %B %Y", locale: "nl") %></time>
          </div>
        </div>
      </div>
    </header>

    <div class="row post-body">
      <div class="col">
        <%= yield %>
      </div>
    </div>

    <footer class="row post-footer">
      <div class="col">
        <div class="author">
          <% if author && href = team_avatar_url(author) %>
            <%= image_tag href, alt: "#{author.firstname} #{author.lastname}", class: "avatar" %>
          <% else %>
            <div class="avatar no-image"></div>
          <% end %>
          <h4 class="author-name"><%= author ? "#{author.firstname} #{author.lastname}" : current_article.data.author %></h4>
        </div>
      </div>
    </footer>
  </article>

  <section class="gray">
    <h3>Lees meer</h3>
    <ol>
      <% blog.articles[0...10].each do |article| %>
        <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></li>
      <% end %>
    </ol>
  </section>

<% end %>
