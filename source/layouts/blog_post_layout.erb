<% wrap_layout :layout do %>

  <section class="gray">
    <div class="row">
      <h1>Defacto Blog</h1>
    </div>
  </section>

  <div class="row">
    <article>
      <%= yield %>
    </article>
  </div>

  <section class="gray">
    <h3>Lees meer</h3>
    <ol>
      <% blog.articles[0...10].each do |article| %>
        <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></li>
      <% end %>
    </ol>
  </section>

<% end %>
